<tr>
  <td><%= link_to post.title, authors_post_path(post) %></td>
  <td><%= link_to 'Edit', edit_authors_post_path(post), class: 'btn btn-sm btn-success'%></td>
  <td><%= link_to 'Remove', authors_post_path(post), method: :delete, data: { confirm: "Are you sure you want to delete #{post.title}?" }, class: 'btn btn-sm btn-danger' %></td>
</tr>
